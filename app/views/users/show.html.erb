<p id="notice"><%= notice %></p>
<% if @images.count > 0 %>
<div class="text-center">
  <h1>Image Feed</h1><br>
</div>

<div id='pins' class='transitions-enabled'>
  <% @images.each do |i| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(i[:url]) %>
        <div class="panel-body">
          <h2><%= "image title" %></h2><hr>
          <p>Uploaded <%= time_ago_in_words 3.minutes.from_now%></p>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-6">
              <div class="btn-group pull-left">
                <span class='glyphicon glyphicon-heart'>
                  <%= i[:like] %>
                </span>
              </div>
            </div>
          </div>
        </div>
    </div>
    <% end %>
</div>

<% else %>
<div class="text-center">
  <h1>No images to dislay :-(</h1>
</div>
<% end %>

<script>
$(function(){
  $('#pins').imagesLoaded(function(){
    $('#pins').masonry({
      itemSelector: '.box',
      isFitWidth: true
    })
  })
})
</script>
